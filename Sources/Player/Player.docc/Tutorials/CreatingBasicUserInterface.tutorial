                    @Image(source: basic-ui-tutorial-1.jpg, alt: "A screenshot from an iPhone")
                }
            }
            
            @Step {
                Import the player package.
                @Code(name: "ContentView.swift", file: basic-ui-tutorial-2.swift) {
                    @Image(source: basic-ui-tutorial-2.jpg, alt: "A screenshot from an iPhone")
                }
            }
            
            @Step {
                Instantiate the player.
                @Code(name: "ContentView.swift", file: basic-ui-tutorial-3.swift) {
                    @Image(source: basic-ui-tutorial-3.jpg, alt: "A screenshot from an iPhone")
                }
            }

